---
import { Icon } from 'astro-icon/components';
import { Button } from '@/components/ui/button';
---

<div class="mx-auto my-14 flex h-full flex-col items-center gap-3 font-sans">
  <div
    class="absolute -top-10 left-1/2 mx-auto h-24 w-96 -translate-x-1/2 animate-pulse rounded-full bg-primary blur-3xl duration-8000"
  >
  </div>
  <div
    class="mx-auto mt-36 max-w-lg space-y-3 px-3 py-6 text-center font-sans lg:max-w-2xl"
  >
    <div
      class="group relative mx-auto mb-8 flex w-fit cursor-default items-center gap-1 rounded-full bg-primary/60 px-4 py-2"
    >
      <div
        class="absolute inset-0 -z-10 mx-auto h-full w-full rounded-full bg-primary/60 blur duration-1000 group-hover:blur-md"
      >
      </div>
      <Icon name="lucide:bell-ring" />
      <p class="leading-wide text-xs font-medium tracking-wide text-slate-100">
        More Updates Coming
      </p>
    </div>
    <h1
      class="tracking-relaxed scroll-m-20 bg-gradient-to-b from-gray-100 to-foreground bg-clip-text text-3xl font-bold leading-tight sm:text-3xl lg:text-5xl"
    >
      Shorten, Track, Optimize Your Links with Clickwise.
    </h1>
    <p class="font-base leading-7 text-gray-400">
      Turn every link into an opportunity. Track clicks, boost conversions, own
      your brand.
    </p>
    <div class="p-0.5"></div>
    <div class="group relative mx-auto w-fit rounded-3xl">
      <Button className="text-md rounded-3xl">Start for Free</Button>
      <div
        class="absolute inset-0 -z-10 h-full w-full rounded-3xl bg-primary blur-sm duration-1000 group-hover:blur"
      >
      </div>
    </div>
  </div>
</div>
